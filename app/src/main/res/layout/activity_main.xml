<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.activities.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:id="@+id/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/kindpng_5706188"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/SignInEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/signIn_email"
                android:inputType="textEmailAddress"
                android:textColor="#8BC34A"
                android:textColorHint="#8BC34A"
                android:fontFamily="@font/ilovemilk"
                android:textFontWeight="500" />

            <EditText
                android:id="@+id/SignInPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/signIn_pw"
                android:inputType="textPassword"
                android:textColor="#8BC34A"
                android:textColorHint="#8BC34A"
                android:fontFamily="@font/ilovemilk"
                android:textFontWeight="500" />

            <Button
                android:id="@+id/SignInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/BrightGreen"
                android:text="Sign In"
                android:textColor="@color/DarkBrown"
                android:fontFamily="@font/ilovemilk"
                android:textFontWeight="500" />

            <Button
                android:id="@+id/findPasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="forgot password?"
                android:textColor="@color/DarkBrown"
                android:fontFamily="@font/ilovemilk"
                android:textFontWeight="500" />

            <Button
                android:id="@+id/MoveToSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/BrightBlue"
                android:text="Sign Up"
                android:textColor="@color/DarkBrown"
                android:fontFamily="@font/ilovemilk"
                android:textFontWeight="500" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
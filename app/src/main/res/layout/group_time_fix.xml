<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".service.activities.EditActivity"
    android:background="@drawable/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹 시간 정하기"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ilovemilk"
            android:textFontWeight="900"
            android:textColor="@color/cardview_dark_background"/>

        <EditText
            android:id="@+id/group_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group"
            android:fontFamily="@font/ilovemilk"
            android:textFontWeight="500"
            android:layout_marginBottom="10dp"
            android:textColor="#8BC34A"/>

        <EditText
            android:id="@+id/place_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Place"
            android:fontFamily="@font/ilovemilk"
            android:textFontWeight="500"
            android:layout_marginBottom="10dp"
            android:textColor="#8BC34A"/>


        <EditText
            android:id="@+id/meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meeting Detail"
            android:fontFamily="@font/ilovemilk"
            android:textFontWeight="500"
            android:layout_marginBottom="10dp"
            android:textColor="#8BC34A"/>

        <include layout="@layout/time_box" />

        <include layout="@layout/fix_appbar" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/dialog_background_round"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="155dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:fontFamily="@font/ilovemilk"
            android:layout_margin="5dp"
            android:text="Input Group pw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/DarkBrown"
            android:fontFamily="@font/ilovemilk"
            android:layout_margin="5dp"
            android:text="패스워드를 입력해주세요." />

        <EditText
            android:id="@+id/put_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:text="cancel"
                android:textSize="10dp"
                android:id="@+id/btnCancel_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_red"
                android:scaleType="center"
                android:layout_marginRight="15dp"/>
            <Button
                android:text="save"
                android:textSize="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btnSave_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/round_yellow" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>